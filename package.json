{
  "name": "solidity-boilerplate",
  "version": "0.1.0",
  "description": "A boilerplate for Smart Contracts creation",
  "main": "",
  "scripts": {
    "test": "truffle test --network test",
    "ganache": "ganache-cli",
    "test:dev": "truffle test --network development",
    "console:dev": "truffle console --network development",
    "postinstall": "npm run compile-contracts",
    "compile-contracts": "truffle compile --all",
    "fmt": "solium -d contracts && eslint ./test",
    "fmt!": "solium -d contracts --fix && eslint ./test --fix",
    "solium": "solium -d contracts",
    "solium:fix": "solium -d contracts --fix",
    "lint": "eslint ./test",
    "lint:fix": "eslint ./test --fix",
    "coverage": "solidity-coverage"
  },
  "author": "Mario Cao <mariocao@witnet.foundation>",
  "repository": {
    "type": "git",
    "url": "https://github.com/mariocao/solidity-boilerplate.git"
  },
  "keywords": [
    "solidity",
    "truffle",
    "ethereum",
    "smart contract",
    "boilerplate",
    "starter"
  ],
  "license": "GPL-3.0",
  "dependencies": {
    "truffle-hdwallet-provider": "^1.0.6"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "ethlint": "^1.2.4",
    "ganache-cli": "^6.4.2",
    "solidity-coverage": "^0.5.11"
  }
}
